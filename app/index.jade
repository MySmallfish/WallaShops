doctype html
html(lang="he-IL")
  head
    title="Walla! שופס"
    meta(charset="utf-8")
    meta(name="base-url", content="http://www.wallashops.co.il")
    meta(name="b-ase-url", content="http://me.simpl.co.il/ws")
    meta(name="ws-url", content="http://www.wallashops.co.il")
    meta(name="version", content=version)
    meta(name="auto-close-at-level", content="2")
    meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0,target-densitydpi=device-dpi")
    link(rel="stylesheet",type="text/css",href="app/css/app.min.css")
    script(type="text/javascript",src="phonegap.js")
  body(class="rtl swipe-animations-enabled", "ng-app"="WallaShops", "ng-controller"="AppCtrl")
    div(class="content-container")
       div(class="loading","ng-hide"="true")
           div(class="message")
               אנו אוספים נתונים עבורך, אנא המתן/י
       app-header
       div(class="content")
           div(class="container-fluid")
               ng-view(s-online)
    script(type="text/javascript",src="app/js/app.min.js")
    script(type="text/javascript").
        function onDeviceReady() {
            if (typeof StatusBar !== "undefined") {
                StatusBar.overlaysWebView(false);
            }
            angular.element(document).ready(function () {
                setTimeout(function () {
                    FastClick.attach(document.body);
                    if (navigator.splashscreen) {
                        navigator.splashscreen.hide();
                    }

                }, 700);
            });
        }

        document.addEventListener("deviceready", onDeviceReady, false);
