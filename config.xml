<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "il.co.wallashops.app"
        version   = "1.1.55">
  <name>Walla! שופס</name>

  <description>
    Walla! שופס
  </description>

  <author href="http://wwww.wallashops.co.il" email="w@lla.shops">
    Walla! שופס
  </author>

  <feature name="http://api.phonegap.com/1.0/network"/>
  <!-- Do not auto hide splash on iOS -->
  <preference name="AutoHideSplashScreen" value="false" />
  <preference name="splash-screen-duration" value="false" />

  <!-- Do not auto hide splash on Android -->
  <preference name="splash-screen-duration" value="10000"/>

  <preference name="phonegap-version" value="3.3.0" />
  <preference name="target-device"    value="tablet" />
  <preference name="fullscreen"       value="false" />
  <preference name="webviewbounce" value="false" />
  <preference name="detect-data-types" value="false" />
  <!--<preference name="orientation" value="landscape"/>-->
  <preference name="ios-statusbarstyle" value="black-opaque" />
  
  <access origin="*" />
  <icon src="assets/app-icons/ios/appicon.png" />
  <icon src="assets/app-icons/ios/appicon.png"            gap:platform="ios"        width="57" height="57" />
  <icon src="assets/app-icons/ios/appicon-72.png"            gap:platform="ios"        width="72" height="72" />
  <icon src="assets/app-icons/ios/appicon@2x.png"         gap:platform="ios"        width="114" height="114" />
  <icon src="assets/app-icons/ios/appicon-72@2x.png"         gap:platform="ios"        width="144" height="144" />

  <icon src="assets/app-icons/android/drawable-ldpi/appicon.png"   gap:platform="android"    gap:density="ldpi" />
  <icon src="assets/app-icons/android/drawable-mdpi/appicon.png"   gap:platform="android"    gap:density="mdpi" />
  <icon src="assets/app-icons/android/drawable-hdpi/appicon.png"   gap:platform="android"    gap:density="hdpi" />
  <icon src="assets/app-icons/android/drawable-xhdpi/appicon.png"   gap:platform="android"    gap:density="xdpi" />
  <icon src="assets/app-icons/android/drawable-xxhdpi/appicon.png"   gap:platform="android"    gap:density="xxdpi" />


  <gap:splash src="assets/splash/android/default.png"  gap:platform="android" />
  <gap:splash src="assets/splash/android/res-notlong-land-hdpi/default.png"  gap:platform="android" gap:density="hdpi" />

  <!--<gap:splash src="assets/splash/ios/Default.png" gap:platform="ios" width="320" height="480" />
